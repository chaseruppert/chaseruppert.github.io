<registry>

  <context name="Game">
    <context name="log">
      <!-- TODO: This entry is not needed when we go "gold" (cbr) -->
      <entry key="sOutputLogFilename" value="ZephyrCustomLog.log" type="string" />
    </context>

    <context name="graphics">
      <!-- 0 is false, 1 is true -->
      <entry key="bEnableDynamicShadows" value="1" type="boolean" />

      <context name="fog" >
        <!-- Fog enabled by default. Set to zero to turn off. -->
        <entry key="bEnableFog" value="1" type="boolean" />
        <entry key="vFogColor" value="{0.3,0.3,0.31}" type="vector" />
        <entry key="fDepth" type="float" value="1.0f" />
      </context>

      <context name="particles">
        <context name="muzzleFlash">
          <entry key="iPoolSize" type="int" value="50" />
          <entry key="fLifeSpan" type="float" value="7.0f" />
          <entry key="sFilename" value="Models/ships/cannonBlast/muzzleFlash.kfm" type="string" />
        </context>
      </context>
      
    </context>
  </context>
  
  <context name="Airship">

    <!-- iForwardAcceleration: default = (-100) -->
    <entry key="iForwardAcceleration" type="int" value="-100" />

    <!-- iHorizontalMovement: default = (-100) -->
    <entry key="iHorizontalMovement" type="int" value="100" />

    <context name="Havoc">
      <entry key="fMaxSpeed" type="float" value="50.0f" />
      <entry key="fTurnRate" type="float" value="0.1f" />
      <entry key="iMaxHealth" type="int" value="22" />
      <entry key="iCannonballDamage" type="int" value="1" />
      <entry key="fCannonballVelocity" type="float" value="260.0f" />
      <entry key="fRateOfFire" type="float" value="2.2f" />
      <entry key="fGunnerCone" type="float" value="0.77" />

      <context name="files">
        <entry key="sHostileFilename" value="Models/ships/havoc/SwitchNode/KNG_HAV.kfm" type="string" />
        <entry key="sFriendlyFilename" value="Models/ships/alliance/havoc/KNG_HAV.kfm" type="string" />
        <entry key="sNeutralFilename" value="Models/ships/havoc/SwitchNode/KNG_HAV.kfm" type="string" />
      </context>
      
    </context>

    <context name="Puffer">
      <entry key="fMaxSpeed" type="float" value="20.0f" />
      <entry key="fTurnRate" type="float" value="0.2f" />
      <entry key="iMaxHealth" type="int" value="13" />
      <entry key="iLittleCannonballDamage" type="int" value="1" />
      <entry key="fLittleCannonballVelocity" type="float" value="200.0f" />
      <entry key="iBigCannonballDamage" type="int" value="4" />
      <entry key="fBigCannonballVelocity" type="float" value="200.0f" />
      <entry key="fLittleRateOfFire" type="float" value="2.8f" />
      <entry key="fLittleGunnerCone" type="float" value="0.9" />
      <entry key="fBigRateOfFire" type="float" value="8.8f" />
      <entry key="fBigGunnerCone" type="float" value="0.9" />

      <context name="files">
        <entry key="sHostileFilename" value="Models/ships/puffer/switchNode/GRS_PUF.kfm" type="string" />
        <entry key="sFriendlyFilename" value="Models/ships/puffer/switchNode/GRS_PUF.kfm" type="string" />
        <entry key="sNeutralFilename" value="Models/ships/puffer/switchNode/GRS_PUF.kfm" type="string" />
      </context>
      
    </context>

    <context name="GigaPuffer">
      <entry key="fMaxSpeed" type="float" value="20.0f" />
      <entry key="fTurnRate" type="float" value="0.4f" />
      <entry key="iMaxHealth" type="int" value="200" />
      <entry key="iLittleCannonballDamage" type="int" value="1" />
      <entry key="fLittleCannonballVelocity" type="float" value="200.0f" />
      <entry key="iBigCannonballDamage" type="int" value="9" />
      <entry key="fBigCannonballVelocity" type="float" value="200.0f" />
      <entry key="fLittleRateOfFire" type="float" value="0.2f" />
      <entry key="fLittleGunnerCone" type="float" value="0.77" />
      <entry key="fBigRateOfFire" type="float" value="7.0f" />
      <entry key="fBigGunnerCone" type="float" value="0.77" />

      <context name="files">
        <entry key="sHostileFilename" value="Models/ships/puffer/gigaPuffer/GRS_PUF.kfm" type="string" />
        <entry key="sFriendlyFilename" value="Models/ships/puffer/gigaPuffer/GRS_PUF.kfm" type="string" />
        <entry key="sNeutralFilename" value="Models/ships/puffer/gigaPuffer/GRS_PUF.kfm" type="string" />
      </context>
      
    </context>

    <context name="Cutter">
      <entry key="fMaxSpeed" type="float" value="30.0f" />
      <entry key="fTurnRate" type="float" value="0.5f" />
      <entry key="iMaxHealth" type="int" value="5" />
      <entry key="iCannonballDamage" type="int" value="1" />
      <entry key="fCannonballVelocity" type="float" value="200.0f" />
      <entry key="fRateOfFire" type="float" value="1.5f" />
      <entry key="fGunnerCone" type="float" value="0.8" />

      <context name="files">
        <entry key="sHostileFilename" value="Models/ships/cutter/switchNode/KNG_CUT.kfm" type="string" />
        <entry key="sFriendlyFilename" value="Models/ships/cutter/switchNode/KNG_CUT.kfm" type="string" />
        <entry key="sNeutralFilename" value="Models/ships/cutter/switchNode/KNG_CUT.kfm" type="string" />
      </context>
      
    </context>

    <context name="Cardinal">
      <entry key="fMaxSpeed" type="float" value="40.0f" />
      <entry key="fTurnRate" type="float" value="0.1f" />
      <entry key="iMaxHealth" type="int" value="28" />
      <entry key="iCannonballDamage" type="int" value="1" />
      <entry key="fCannonballVelocity" type="float" value="400.0f" />
      <entry key="fRateOfFire" type="float" value="1.8f" />
      <entry key="fGunnerCone" type="float" value="0.77" />
    </context>

  </context>
  
</registry>
